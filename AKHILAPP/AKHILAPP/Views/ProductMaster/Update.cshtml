@model List<AKHILAPP.Models.Product_Master>

<h2>Update Product</h2>

<table class="table">
    <tr>
        <th>ProdMaster_Id</th>
        <th>Prod_Name</th>
        <th>Catmaster_Id</th>
        <th>Category Name</th>
        <th>Actions</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProdMaster_Id</td>
            <td>@product.Prod_Name</td>
            <td>@product.Catmaster_Id</td>
            <td>@(product.Category_Master != null ? product.Category_Master.Cat_Name : "")</td>
            <td>
                <form asp-action="Update" asp-controller="ProductMaster" method="post">
                    <input type="hidden" name="id" value="@product.ProdMaster_Id" />
                    <input type="text" name="productName" value="@product.Prod_Name" />
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </td>
        </tr>
    }
</table>
